# Poly Copy Cat API key (get one at https://polycopycat.com/dashboard/api-keys)
PCC_API_KEY=pcc_your_key_here

# Or manually specify trader wallet addresses (comma-separated)
# MANUAL_TRADERS=0xabc123...,0xdef456...

# Your wallet private key (only needed for live trading)
# PRIVATE_KEY=

# Your Polymarket funder/proxy wallet address (only needed for live trading)
# FUNDER_ADDRESS=

# RPC URL for Polygon
# RPC_URL=https://polygon-rpc.com

# Trading mode (true = paper trading, false = live trading)
PAPER_TRADING=true

# How many top traders to copy (1-20)
MAX_TRADERS=5

# How often to poll for changes (seconds)
POLL_INTERVAL=5

# Risk controls
MAX_POSITION_USD=50
MAX_CONCURRENT_POSITIONS=10
DAILY_LOSS_LIMIT_USD=100
